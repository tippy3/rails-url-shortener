<h2 class="pb-3"><i class="fas fa-users-cog"></i> <%= @user.name %></h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Admin</th>
      <th scope="col">Created</th>
      <th scope="col">Updated</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @user.id %></td>
      <td><%= @user.admin %></td>
      <td><%= @user.created_at %></td>
      <td><%= @user.updated_at if @user.created_at != @user.updated_at %></td>
    </tr>
  </tbody>
</table>
<p><%= link_to "Delete this account", "/admin/users/#{@user.id}/destroy", method: :post, class: 'btn btn-outline-danger', data: {confirm: "Are you sure?"} %></p>

<div class="table-responsive mt-5">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Shortened url</th>
        <th scope="col">Original url</th>
        <th scope="col">Clicks</th>
      </tr>
    </thead>
    <tbody>
      <% @user.urls.each do |url| %>
        <tr>
          <td>
            <%= link_to "/#{url.short_url}/edit", class: "text-body" do %>
              <span class="text-muted">tippy.jp/</span><span class="font-weight-bold"><%= url.short_url %></span> â˜…
            <% end %>
          </td>
          <td><%= link_to url.long_url, url.long_url, target: :_blank, rel: "noopener noreferrer" %></td>
          <td><%= url.click_count %></td>
        </tr>
      <% end %>
      <% if @user.urls.empty? %>
        <td>No Data</td>
      <% end %>
    </tbody>
  </table>
</div>
