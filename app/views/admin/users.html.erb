<ul class="nav nav-tabs mb-3">
  <li class="nav-item">
    <a class="nav-link active" href="/admin/users"><i class="fas fa-users"></i> All Users</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/admin/urls"><i class="fas fa-link"></i> All Urls</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/admin/urls">Invitation Code</a>
  </li>
</ul>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Admin</th>
        <th scope="col">Created</th>
        <th scope="col">Updated</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.name %></td>
          <td><%= user.admin if user.admin %></td>
          <td><%= user.created_at %></td>
          <td><%= user.updated_at if user.created_at != user.updated_at %></td>
          <td><%= link_to "show", "/admin/users/#{user.id}" %></td>
          <td><%= link_to "delete", "/admin/users/#{user.id}/destroy", method: :post, data: {confirm: 'Do you want to delete?'} %></td>
        </tr>
      <% end %>
      <% if @users.empty? %>
        <td>No Data</td>
      <% end %>
    </tbody>
  </table>
</div>
